<Window x:Class="FairiesCoolerCash.Business.LocalDeptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置本地部门" Height="200" Width="200" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" FontSize="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <ComboBox Name="cbLocalDept" Loaded="ComboBox_Loaded" DisplayMemberPath="DeptName" SelectedValuePath="DeptId" />
        <Button Grid.Row="1" Content="设置本地部门" Click="Button_Click" />
    </Grid>
</Window>
