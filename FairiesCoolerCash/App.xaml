      <Style p7:Key="DataGridRowStyle" TargetType="{x:Type DataGridRow}" xmlns:p7="http://schemas.microsoft.com/winfx/2006/xaml">
        <Style.Triggers>
          <DataTrigger Binding="{Binding Status}" Value="0">
            <Setter Property="Background" Value="White" />
          </DataTrigger>
          <DataTrigger Binding="{Binding Status}" Value="1">
            <Setter Property="Background" Value="Gray" />
            <Setter Property="IsEnabled" Value="False">
            </Setter>
          </DataTrigger>
          <DataTrigger Binding="{Binding Status}" Value="2">
            <Setter Property="Background" Value="White" />
          </DataTrigger>
          <DataTrigger Binding="{Binding Status}" Value="3">
            <Setter Property="Background" Value="White" />
          </DataTrigger>
          <DataTrigger Binding="{Binding Status}" Value="4">
            <Setter Property="Background" Value="Red" />
          </DataTrigger>
          <DataTrigger Binding="{Binding Status}" Value="5">
            <Setter Property="Background" Value="Yellow" />
          </DataTrigger>
          <DataTrigger Binding="{Binding Status}" Value="6">
            <Setter Property="Background" Value="GreenYellow" />
          </DataTrigger>
          <DataTrigger Binding="{Binding Status}" Value="7">
            <Setter Property="Background" Value="Gray" />
            <Setter Property="IsEnabled" Value="False">
            </Setter>
          </DataTrigger>
        </Style.Triggers>
      </Style>
