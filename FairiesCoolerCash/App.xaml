      <local:DecimalConverter p7:Key="decimalConverter" xmlns:p7="http://schemas.microsoft.com/winfx/2006/xaml" />
      <local:DecimalNullConverter p7:Key="decimalNullConverter" xmlns:p7="http://schemas.microsoft.com/winfx/2006/xaml" />
      <local:TotalSumConverter p7:Key="sumConverter" xmlns:p7="http://schemas.microsoft.com/winfx/2006/xaml" />
      <local:OrderMenuRowBackgroudConverter p7:Key="myOrderMenuRowBackgroudConverter" xmlns:p7="http://schemas.microsoft.com/winfx/2006/xaml" />
      <local:DeskStatusConverter p7:Key="myDeskStatusConverter" xmlns:p7="http://schemas.microsoft.com/winfx/2006/xaml" />
      <local:OrderMenuStatusConverter p7:Key="myOrderMenuStatusConverter" xmlns:p7="http://schemas.microsoft.com/winfx/2006/xaml" />
      <local:OrderMenuStatusEnabledConverter p7:Key="myOrderMenuStatusEnabledConverter" xmlns:p7="http://schemas.microsoft.com/winfx/2006/xaml" />
      <local:ImageConverter p7:Key="myImageConverter" xmlns:p7="http://schemas.microsoft.com/winfx/2006/xaml" />
      <Style TargetType="{x:Type local:PaggingControl}">
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type local:PaggingControl}">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Button Name="PART_FirstPageButton" Content="&lt;&lt;" Grid.Column="0" />
                <Button Name="PART_PreviousPageButton" Content="&lt;" Grid.Column="1" />
                <Button Name="PART_GoToPageButton" Content="跳至" Grid.Column="2" />
                <TextBox Name="PART_PageTextBox" Grid.Column="3" />
                <TextBlock Text="{Binding TotalPages, RelativeSource={RelativeSource TemplatedParent},StringFormat={}共{0}页}" Grid.Column="4" />
                <Button Name="PART_NextPageButton" Content="&gt;" Grid.Column="5" />
                <Button Name="PART_LastPageButton" Content="&gt;&gt;" Grid.Column="6" />
                <ComboBox Name="PART_PageSizesCombobox" Grid.Column="7" />
                <TextBlock Grid.Column="8">
                  <Run Text="{Binding StartRecord, RelativeSource={RelativeSource TemplatedParent}}">
                  </Run>
                  <Run Text="-" />
                  <Run Text="{Binding EndRecord, RelativeSource={RelativeSource TemplatedParent}}">
                  </Run>
                  <Run Text="{Binding TotalRecords, RelativeSource={RelativeSource TemplatedParent},StringFormat={}共{0}条}">
                  </Run>
                </TextBlock>
              </Grid>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <local:ReceiptStatusConverter p7:Key="myReceiptStatusConverter" xmlns:p7="http://schemas.microsoft.com/winfx/2006/xaml" />
