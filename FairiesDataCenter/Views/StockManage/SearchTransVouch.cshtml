@using Trirand.Web.Mvc
@model ynhnTransportManage.Models.StockManage.TransVouchGridModel
@{
    ViewBag.Title = "搜索库存调拨单";
}
@Html.Trirand().JQGrid(Model.TransVouchGrid, "TransVouchGrid")
<script type="text/javascript">
$(document).ready(function () {
        $("#TransVouchGrid").closest("div.ui-jqgrid-view")
                .children("div.ui-jqgrid-titlebar")
                .css("text-align", "center")
                .css("font-size", "large")
                .children("span.ui-jqgrid-title")
                .css("float", "none");
    });
    function FormatNumber(num) {
        return parseFloat(num);
    }
    function UnFormatNumber(num) {
        return num;
    }
    function DblClick(rowid) {
        self.location = "@Url.Action("TransVouch", "StockManage")"+"?Id="+rowid;
    }
    function beforeRefresh() {
        $("#TransVouchGrid").jqGrid("setGridParam", {search: true}).trigger("reloadGrid", [{ page: 1}]);
    }
    function serializeGridData(postData){
        return postData;
    }
</script>