        $("#WarehouseInventoryGrid").closest("div.ui-jqgrid-view")
                .children("div.ui-jqgrid-titlebar")
                .css("text-align", "center")
                .css("font-size", "large")
                .children("span.ui-jqgrid-title")
                .css("float", "none");
    });
    function populate() {
        //$("#Warehouse").chosen({ allow_single_deselect: true, no_results_text: "没有找到", search_contains: true });  
        $("#Inventory").chosen({ allow_single_deselect: true, no_results_text: "没有找到", search_contains: true });  
    }
</script>
