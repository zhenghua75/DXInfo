@using Trirand.Web.Mvc
@model ynhnTransportManage.Models.PlayListGridModel
@Html.Trirand().JQGrid(Model.PlayListGrid, "PlayListGrid")
<script type="text/javascript">
    $(document).ready(function () {
        $("#PlayListGrid").closest("div.ui-jqgrid-view")
                .children("div.ui-jqgrid-titlebar")
                .css("text-align", "center")
                .css("font-size", "large")
                .children("span.ui-jqgrid-title")
                .css("float", "none");
    });
</script>
