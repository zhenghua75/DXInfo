@using Trirand.Web.Mvc
@model ynhnTransportManage.Models.InventoryCategoryGridModel
@Html.Trirand().JQGrid(Model.InventoryCategoryGrid, "InventoryCategoryGrid")
@Html.HiddenFor(m => m.CategoryType)
@Html.HiddenFor(m => m.DeptType)
<script type="text/javascript">
    function serializeGridData(postData) {
        var sdata = {
            _search: "true",
            DeptType: $("#DeptType").val(),
            CategoryType: $("#CategoryType").val()
        };
        var newPostData = $.extend(postData, sdata);
        return newPostData;
    }
    function beforeSubmit(postdata, formid) {
        var sdata = {
            DeptType: $("#DeptType").val(),
            CategoryType: $("#CategoryType").val()
        };
        $.extend(postdata, sdata);
        return [true, ''];
    }
</script>