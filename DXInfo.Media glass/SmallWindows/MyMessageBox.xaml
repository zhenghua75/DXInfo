<Window x:Class="Media_glass.MyMessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" KeyDown="Window_KeyDown" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid Width="440" Height="100">
        <Image Margin="11,11,0,0" Name="image" HorizontalAlignment="Left" Stretch="None" Width="32" Height="32" VerticalAlignment="Top" />        
        <Label x:Name="textLabel" Margin="49,0,11,47" VerticalContentAlignment="Center">Attention</Label>
        <Separator Height="1" Margin="4,0,4,45" Name="separator1" VerticalAlignment="Bottom" />
        <StackPanel Height="23" Margin="0,0,11,11" Name="stackPanel1" VerticalAlignment="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Width="211" FlowDirection="RightToLeft">
            <Button x:Name="cancelButton" Height="23" Width="75" Margin="0,0,7,0" Click="cancelButton_Click">Cancel</Button>
            <Button x:Name="okButton" Height="23" Width="75" Click="okButton_Click">Ok</Button>
        </StackPanel>
    </Grid>
</Window>
